<html lang="en">
<%- include('includes/header') %>

<body>
    <%- include('includes/nav') %>

    <div class="container mt-5">
        <form>
            <h1>Register Page</h1>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Username<sup class="text-danger">*</sup></label>
                <input type="text" name="username" class="form-control" id="username">
            </div>
